FROM jenkins/jenkins:lts
USER root

# Install packages
RUN apt-get update && apt-get install -y curl docker.io gnupg ca-certificates unzip

# Install kubectl
RUN curl -LO https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl \
  && install -o root -g root -m 0755 kubectl /usr/local/bin/kubectl \
  && rm kubectl

# Install helm
RUN curl https://raw.githubusercontent.com/helm/helm/main/scripts/get-helm-3 | bash

# Install OpenTofu (user should provide binary or use apt if available)
# For portability, expect user to install 'opentofu' in host and mount or add to path.

# Install docker CLI
RUN apt-get install -y docker.io

# Switch back to jenkins user
USER jenkins

# Copy initial groovy for admin user (optional)
COPY init.groovy.d /var/jenkins_home/init.groovy.d